<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net452;netstandard2.0</TargetFrameworks>
    <AssemblyName>NServiceBus.ObjectBuilder.CastleWindsor</AssemblyName>
    <PackageId>NServiceBus.CastleWindsor</PackageId>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
    <DebugType>full</DebugType>
    <DebugSymbols>True</DebugSymbols>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <NoWarn>CS0419</NoWarn>
    <UpdateAssemblyInfo>true</UpdateAssemblyInfo>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Castle.Core" Version="[4.1.1, 5.0.0)" />
    <PackageReference Include="Castle.Windsor" Version="[4.0.0, 5.0.0)" />
    <PackageReference Include="Janitor.Fody" Version="1.5.1" PrivateAssets="All" />
    <PackageReference Include="NServiceBus" Version="[7.0.0-*,8.0)" />
    <PackageReference Include="Obsolete.Fody" Version="4.2.4" PrivateAssets="All" />
    <PackageReference Include="Fody" Version="2.1.2" PrivateAssets="All" />
    <PackageReference Include="GitVersionTask" Version="4.0.0-beta0012" PrivateAssets="All" />
    <None Include="..\..\GitVersion.yml" Link="GitVersion.yml" />
  </ItemGroup>
</Project>